                    </ListBox>
                </ListBoxItem>
                <ListBoxItem>
                    <ListBox>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBoxItem>
                            <Button Content="head4" Height="50" Width="50" Margin="2"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <Button Content="item1" Height="50" Width="50" Margin="2"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <Button Content="item2" Height="50" Width="50" Margin="2"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <Button Content="item3" Height="50" Width="50" Margin="2"/>
                        </ListBoxItem>
                    </ListBox>
                </ListBoxItem>
            </ListBox>
        </GroupBox>

    </Grid>
</Window>
